{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "paths": {
      "@injexio/core": [
        "../../packages/core"
      ],
      "@injexio/core/*": [
        "../../packages/core/*"
      ],
      "@injexio/http": [
        "../../packages/http"
      ],
      "@injexio/http/*": [
        "../../packages/http/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}