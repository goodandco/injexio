{
  "name": "injexio",
  "version": "1.0.0",
  "description": "Framework based on Dependency Injection, allowed to run your components with just declarative way",
  "author": "Oleksandr Hudenko <oleksandr.hudenko@gmail.com>",
  "license": "MIT",
  "keywords": [
    "typescript",
    "node.js",
    "javascript",
    "framework",
    "dependency",
    "injection"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goodandco/injexio.git"
  },
  "bugs": {
    "url": "https://github.com/goodandco/injexio/issues"
  },
  "homepage": "https://github.com/goodandco/injexio#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b -v packages",
    "prebuild": "npm run clean",
    "build:prod": "tsc -b -v packages",
    "prebuild:prod": "npm run clean",
    "build:integration": "tsc -b -v integration ./tsconfig.spec.json",
    "prebuild:integration": "npm run clean",
    "clean": "tsc -b --clean packages",
    "changelog": "lerna-changelog",
    "lint": "concurrently 'npm run lint:packages' 'npm run lint:integration'",
    "lint:integration": "eslint 'integration/*/{,!(node_modules)/**/}/*.ts' --fix",
    "lint:packages": "eslint 'packages/**/**.ts' --ignore-pattern 'packages/**/*.spec.ts' --fix",
    "lint:spec": "eslint 'packages/**/**.spec.ts'",
    "format": "prettier \"**/*.ts\" \"packages/**/*.json\" --ignore-path ./.prettierignore --write && git status",
    "test": "mocha packages/**/*.spec.ts",
    "test:integration": "mocha \"integration/*/{,!(node_modules)/**/}/*.spec.ts\"",
    "publish": "npm run build:prod && ./node_modules/.bin/lerna publish --force-publish --no-private",
    "prepublishOnly": "npm run changelog | pbcopy",
    "publish:beta": "npm run build:prod && ./node_modules/.bin/lerna publish --force-publish --canary --preid beta --no-private --yes --registry https://registry.npmjs.org/",
    "publish:next": "npm run build:prod && ./node_modules/.bin/lerna publish --canary --preid next --no-private",
    "publish:rc": "npm run build:prod && ./node_modules/.bin/lerna publish --canary --preid rc --no-private"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "tslib": "2.6.1",
    "log4js": "^6.9.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "lerna": "^7.1.4",
    "@types/mocha": "10.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "20.4.5",
    "@types/sinon": "10.0.15",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.61.0",
    "@typescript-eslint/parser": "5.62.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "mocha": "10.2.0",
    "sinon": "15.2.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.6",
    "supertest": "6.3.3",
    "concurrently": "8.2.0",
    "prettier": "3.0.0"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ],
    "exit": true
  }
}
