{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@injexio/http": [
        "./packages/http"
      ],
      "@injexio/http/*": [
        "./packages/http/*"
      ],
      "@injexio/core": [
        "./packages/core"
      ],
      "@injexio/core/*": [
        "./packages/core/*"
      ]
    }
  },
  "include": [
    "packages/**/*",
    "integration/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}